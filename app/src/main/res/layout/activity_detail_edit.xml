<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Back Arrow"
            app:tint="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Kuis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Scrollable container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:padding="16dp">

        <!-- Container utama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Background Image -->
                    <ImageView
                        android:id="@+id/imageQuiz"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/quiz" />

                    <!-- Overlay for Text Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageQuiz"
                        android:background="#CCFFFFFF"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quiz 01 - Fisika Kuantum"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/textSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fisika"
                                android:textColor="#6B7280"
                                android:drawableLeft="@drawable/book"
                                android:drawablePadding="4dp" />

                            <TextView
                                android:id="@+id/textDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60 Menit"
                                android:textColor="#6B7280"
                                android:drawableLeft="@drawable/time"
                                android:drawablePadding="4dp" />

                            <TextView
                                android:id="@+id/textDifficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mudah"
                                android:textColor="#6B7280"
                                android:drawableLeft="@drawable/stairsup"
                                android:drawablePadding="4dp" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Input Judul Kuis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Kuis"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextJudulKuis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Judul Kuis di sini"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Area Pertanyaan dan Opsi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- Pertanyaan -->
                <EditText
                    android:id="@+id/editTextPertanyaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis pertanyaan (0/500)"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@android:color/darker_gray" />

                <!-- Opsi 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Opsi 1"
                        android:padding="8dp"
                        android:backgroundTint="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Tambah Opsi -->
                <LinearLayout
                    android:id="@+id/opsiContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tambah Opsi"
                        android:padding="8dp"
                        android:backgroundTint="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Jawaban, Mata Pelajaran, Waktu, Level -->
                <EditText
                    android:id="@+id/editTextJawaban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jawaban"
                    android:padding="8dp"
                    android:backgroundTint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/editTextMapel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mata Pelajaran"
                    android:padding="8dp"
                    android:backgroundTint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Waktu"
                    android:padding="8dp"
                    android:backgroundTint="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/editTextDifficult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Level"
                    android:padding="8dp"
                    android:backgroundTint="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Tombol Edit Kuis -->
            <Button
                android:id="@+id/buttonUpdateQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Kuis"
                android:backgroundTint="@color/blueprimary"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
